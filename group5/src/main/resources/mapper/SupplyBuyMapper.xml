  </insert>

  <insert id="insertSupply" parameterType="cn.niit.group5.entity.SupplyBuy">
    INSERT INTO t_supply_buy(user_id,sort,title,content,unit,amount,price,enterprise,seller_name,seller_phone,is_supply_buy) VALUES (#{userId},#{sort},#{title},#{content},#{unit},#{amount},#{price},#{enterprise},#{sellerName},#{sellerPhone},#{isSupplyBuy})
  </insert>
</mapper>